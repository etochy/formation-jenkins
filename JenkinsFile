pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("Checkout") {
            steps {
                git url: "https://github.com/etochy/formation-jenkins.git", branch: "main"
            }
        }
        stage("Build") {
            steps {
                echo "Start build"
                sh "mvn clean compile"
            }
        }
        stage("Test unit") {
            steps {
                sh "mvn test"
            }
        }
        stage("Code coverage") {
            steps {
                sh "mvn verify"
                publishHTML (target: [
                    reportDir: 'target/site/jacoco',
                    reportFiles: 'index.html',
                    reportName: 'Jacoco Report'
                ])
            }
        }

        stage("Check style") {
            steps {
                sh "mvn site"
                publishHTML (target: [
                    reportDir: 'target/site/',
                    reportFiles: 'index.html',
                    reportName: 'Checkstyle Report'
                ])
            }
        }
    }
}