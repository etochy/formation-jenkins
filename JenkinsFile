pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("Checkout") {
            steps {
                git url: "https://github.com/etochy/formation-jenkins.git", branch: "main"
            }
        }
        stage("Build") {
            steps {
                echo "Start build"
                sh "mvn clean compile"
            }
        }
        stage("Test unit") {
            steps {
                sh "mvn test"
            }
        }
        stage("Code coverage") {
            steps {
                sh "mvn clean verify"
            }
        }
    }
}