pipeline {
    agent any
    tools {
        maven 'mvn'
    }
    stages {
        stage("Checkout") {
            steps {
                git url: "https://github.com/etochy/formation-jenkins.git", branch: "main"
            }
        }
        stage("Build") {
            steps {
                echo "Start build"
                sh "mvn clean compile"
            }
        }
        stage("Test unit") {
            steps {
                sh "mvn test"
            }
        }
        stage("Code coverage") {
            steps {
                sh "mvn verify"
                publishHTML (target: [
                    reportDir: 'target/site/jacoco',
                    reportFiles: 'index.html',
                    reportName: 'Jacoco Report'
                ])
            }
        }
        stage("Check style") {
            steps {
                sh "mvn site"
                publishHTML (target: [
                    reportDir: 'target/site/',
                    reportFiles: 'index.html',
                    reportName: 'Checkstyle Report'
                ])
            }
        }
        stage("Package") {
            steps {
                sh "mvn install"
            }
        }
        stage("Docker login") {
            steps {
                sh "docker login --username etochy --password-stdin $PASSWORD_DOCKER_HUB "
            }
        }
        stage("Docker build") {
            steps {
                sh "docker build -t etochy/calculator ."
            }
        }
        stage("Docker push") {
            steps {
                sh "docker push etochy/calculator"
            }
        }
        stage("Deploy to staging") {
            steps {
                sh "docker run -d --rm -p 8083:8083 --name calculator admin/calculator"
            }
        }
        stage("Acceptance test") {
            steps {
                sleep 60
                sh "chmod +x test_accept.sh && ./test_accept.sh"
            }
        }
    }
    post {
        always {
            sh "docker stop calculator"
        }
    }
}
